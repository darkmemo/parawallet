{
    "extends": ["tslint:recommended", "tslint-react"],
    "rules": {
      "max-line-length": {
        "options": [
          120
        ]
      },
      "new-parens": true,
      "no-arg": true,
      "no-bitwise": true,
      "no-conditional-assignment": true,
      "no-consecutive-blank-lines": false,
      "max-classes-per-file": false,
      "object-literal-key-quotes": false,
      "no-console": [false, "log", "error"]
    },
    "jsRules": {
      "max-line-length": {
        "options": [
          120
        ]
      },
      "no-console": [false, "log", "error"]
    }
  }
