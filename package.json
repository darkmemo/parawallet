{
  "name": "thewallet",
  "version": "1.0.0",
  "description": "The wallet you need",
  "main": "app/main.js",
  "scripts": {
    "build": "rm -rf app && tsc",
    "test": "mocha --require babel-core/register test/**/*.js",
    "start": "electron .",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "lint": "tslint -c tslint.json -p tsconfig.json"
  },
  "repository": "https://bitbucket.org/thewallet/thewallet",
  "keywords": [
    "wallet",
    "bitcoin",
    "ethereum",
    "ripple",
    "monero"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "chai": "*",
    "electron": "~1.7.8",
    "electron-builder": "^19.52.1",
    "mocha": "*",
    "tslint": "^5.8.0",
    "tslint-react": "^3.3.3",
    "typescript": "^2.6.2"
  },
  "dependencies": {
    "bitcoinjs-lib": "^3.3.1",
    "coinselect": "^3.1.1",
    "cryptocoins-icons": "^2.6.0",
    "seco-keyval": "^0.2.0",
    "dhttp": "^2.3.5",
    "jquery": "^3.2.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "build": {
    "appId": "com.the.wallet",
    "mac": {
      "category": "public.app-category.finance"
    },
    "files": [
      "app/",
      "static/"
    ]
  }
}
