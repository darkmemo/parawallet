{
  "name": "thewallet",
  "version": "1.0.0",
  "description": "The wallet you need",
  "main": "app/main.js",
  "scripts": {
    "build": "rm -rf app && babel src -d app",
    "test": "mocha --require babel-core/register test/**/*.js",
    "start": "electron app/main.js",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "repository": "https://bitbucket.org/thewallet/thewallet",
  "keywords": [
    "wallet",
    "bitcoin",
    "ethereum",
    "ripple",
    "monero"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "chai": "*",
    "electron": "~1.7.8",
    "electron-builder": "^19.52.1",
    "mocha": "*"
  },
  "dependencies": {
    "bitcoinjs-lib": "^3.3.1",
    "coinselect": "^3.1.1",
    "cryptocoins-icons": "^2.6.0",
    "seco-keyval": "^0.2.0",
    "dhttp": "^2.3.5",
    "jquery": "^3.2.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "build": {
    "appId": "com.the.wallet",
    "mac": {
      "category": "public.app-category.finance"
    },
    "files": [
      "app/", 
      "static/"
    ]
  }
}
